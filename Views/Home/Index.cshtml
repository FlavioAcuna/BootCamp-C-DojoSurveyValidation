@{
    ViewData["Title"] = "Home Page";
}
@model Survey;

<body>
    <div class="container p-3 m-3 h border border-primary">
        <form action="ProcesarDatos" method="post">
            <div class="mb-3">
                <label asp-for="Nombre">Nombre</label>
                <input type="text" asp-for="Nombre">
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="mb-3 ">
                <label asp-for="UbicacionDojo">Ubicación del Dojo</label>
                <select asp-for="UbicacionDojo" id="UbicacionDojo">
                    <option selected value="" disabled></option>
                    <option value="Talca">Talca</option>
                    <option value="Santiago">Santiago</option>
                    <option value="Diego">San Diego</option>
                </select>
                <span asp-validation-for="UbicacionDojo"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FavoriteLanguage">Lenguaje Favorito</label>
                <select asp-for="FavoriteLanguage" id="FavoriteLanguage">
                    <option selected value="" disabled></option>
                    <option value="C#">C#</option>
                    <option value="JavaScript">JavaScript</option>
                    <option value="Java">Java</option>
                    <option value="Python">Python</option>
                </select>
                <span asp-validation-for="FavoriteLanguage"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Comment">Comentario(Opcional)</label><br>
                <textarea asp-for="Comment" id="Comment" cols="30"></textarea>
                <span asp-validation-for="Comment"></span>
            </div>
            <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
    </div>
</body>